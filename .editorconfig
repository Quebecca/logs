root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.html]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4

[composer.json]
indent_style = space

[*.php]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.xlf]
indent_style = tab
indent_size = 4
